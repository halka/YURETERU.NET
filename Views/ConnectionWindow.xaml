<Window x:Class="YureteruWPF.Views.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Settings" MinHeight="260" Width="380"
        SizeToContent="Height"
        Background="{StaticResource DarkBackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Border Padding="20" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="6">
        <StackPanel>
            <TextBlock Text="SERIAL PORT CONFIGURATION" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" Foreground="{StaticResource AccentBrush}"/>

            <TextBlock Text="PORT" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox ItemsSource="{Binding AvailablePorts}" SelectedItem="{Binding SelectedPort}" Margin="0,0,5,0"
                          Background="#262626" Foreground="#E0E0E0" BorderBrush="{StaticResource SubtleBorderBrush}">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Foreground" Value="#E0E0E0"/>
                            <Setter Property="Background" Value="#262626"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
                <Button Grid.Column="1" Content="ðŸ”„" Command="{Binding RefreshPortsCommand}" Style="{StaticResource TacticalButtonStyle}" Padding="10,2"/>
            </Grid>

            <TextBlock Text="BAUD RATE" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding AvailableBaudRates}" SelectedItem="{Binding BaudRate}" Margin="0,0,0,20"
                      IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"
                      Background="#262626" Foreground="#E0E0E0" BorderBrush="{StaticResource SubtleBorderBrush}">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="#E0E0E0"/>
                        <Setter Property="Background" Value="#262626"/>
                        <Setter Property="Padding" Value="6,4"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>

            <UniformGrid Columns="2">
                <Button Style="{StaticResource TacticalButtonStyle}" Margin="0,0,5,0"
                        Background="{StaticResource StatusOnlineBrush}"
                        BorderBrush="{StaticResource StatusOnlineBrush}"
                        Foreground="{StaticResource PrimaryTextBrush}"
                        Command="{Binding ConnectCommand}"
                        Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="Connect" FontWeight="Bold"/>
                </Button>

                <Button Content="CLOSE" Style="{StaticResource TacticalButtonStyle}" Click="CloseButton_Click" Margin="5,0,0,0"/>
            </UniformGrid>
        </StackPanel>
    </Border>
</Window>
