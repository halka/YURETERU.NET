<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:YureteruWPF.Converters">

    <!-- Converters -->
    <converters:IntensityToColorConverter x:Key="IntensityToColorConverter"/>
    <converters:LpgmClassToColorConverter x:Key="LpgmClassToColorConverter"/>

    <!-- Colors & Brushes -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#0C0C0C"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#161616"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#007AFF"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#FF3B30"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#FF5F52"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFB300"/>
    <SolidColorBrush x:Key="StatusOnlineBrush" Color="#0FD976"/>
    <SolidColorBrush x:Key="StatusOfflineBrush" Color="#5A5A5A"/>
    <SolidColorBrush x:Key="AlertForegroundBrush" Color="#FF3B30"/>
    <SolidColorBrush x:Key="AlertBackgroundBrush" Color="#2B0A0A"/>
    <SolidColorBrush x:Key="AlertPulseOverlayBrush" Color="#40FF3B30"/>
    <SolidColorBrush x:Key="SubtleBorderBrush" Color="#33FFFFFF"/>
    <SolidColorBrush x:Key="HairlineBorderBrush" Color="#30FFFFFF"/>
    <SolidColorBrush x:Key="AxisXBrush" Color="#FF3B30"/>
    <SolidColorBrush x:Key="AxisYBrush" Color="#007AFF"/>
    <SolidColorBrush x:Key="AxisZBrush" Color="#4CD964"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#444444"/>

    <!-- JMA Intensity Colors -->
    <SolidColorBrush x:Key="JmaCol0" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="JmaCol1" Color="#0041FF"/>
    <SolidColorBrush x:Key="JmaCol2" Color="#00D2FF"/>
    <SolidColorBrush x:Key="JmaCol3" Color="#FAFA00"/>
    <SolidColorBrush x:Key="JmaCol4" Color="#FFD200"/>
    <SolidColorBrush x:Key="JmaCol5L" Color="#FF9900"/>
    <SolidColorBrush x:Key="JmaCol5U" Color="#FF5F00"/>
    <SolidColorBrush x:Key="JmaCol6L" Color="#FF0000"/>
    <SolidColorBrush x:Key="JmaCol6U" Color="#A50000"/>
    <SolidColorBrush x:Key="JmaCol7" Color="#B40068"/>

    <!-- LPGM Class Colors -->
    <SolidColorBrush x:Key="JmaLpgmCol1" Color="#00D2FF"/>
    <SolidColorBrush x:Key="JmaLpgmCol2" Color="#FFD200"/>
    <SolidColorBrush x:Key="JmaLpgmCol3" Color="#FF9900"/>
    <SolidColorBrush x:Key="JmaLpgmCol4" Color="#FF0000"/>

    <!-- Styles -->
    <Style x:Key="TacticalButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#3A3A3A"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#4A4A4A"/>
                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#2F2F2F"/>
            </Trigger>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryTextBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource TacticalButtonStyle}">
        <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource DangerHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource TacticalButtonStyle}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
    </Style>

    <Style x:Key="IndustrialPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <!-- Default text for dark theme -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- Text Styles for Contrast -->
    <Style x:Key="JmaContrastTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol5U}">
                <Setter Property="Foreground" Value="White"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol6L}">
                <Setter Property="Foreground" Value="White"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol6U}">
                <Setter Property="Foreground" Value="White"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol7}">
                <Setter Property="Foreground" Value="White"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="JmaLpgmLabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
    </Style>

    <Style x:Key="JmaLpgmContrastTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <!-- ComboBox for dark theme -->
    <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                    <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2A2A2A"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            </Trigger>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
